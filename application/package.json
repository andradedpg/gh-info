{
  "name": "gh-info",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc && yarn copy-files && yarn migration:sync",
    "copy-files": "cp .env ./dist/.env && rsync -a ./src/services/postgres/sql/*.sql ./dist/services/postgres/sql/ ",
    "start": "./node_modules/nodemon/bin/nodemon.js -e ts  --exec \"npm run dev-test\"",
    "dev-test": "npx tsc && yarn copy-files && node ./dist/index.js --username andradedpg",
    "migrate": "node-pg-migrate",
    "migration:sync": "eval $(grep '^DATABASE_URL' .env) && npm run migrate up", 
    "lint": "eslint --fix . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "figlet": "^1.6.0",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.1",
    "pg-promise": "^11.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.6",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "typescript": "^5.1.6"
  }
}
